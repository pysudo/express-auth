<% layout('layouts/base') -%>

    <div class="row m-5">
        <div class="col-6 offset-3">
            <form action="/profile" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="name">Company Name</label>
                    <input class="form-control" type="text" name="name">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="address">Company Address</label>
                    <textarea class="form-control" id="address" name="address" cols="30" rows="5"></textarea>
                </div>
                <fieldset class="contact input-group mb-3">
                    <legend>Contacts</legend>

                    <label for="landline">
                        <span class="input-group-text">Landline</span>
                    </label>
                    <input class="form-control" id="landline" type="number" name="contacts[landline]" aria-label="Landline" aria-describedby="landine">

                    <label for="phone">
                        <span class="input-group-text">Phone</span>
                    </label>
                    <input class="form-control" id="phone" type="number" name="contacts[phone]" aria-label="Phone" aria-describedby="phone">
                </fieldset>
                <div class="mb-3">
                    <label class="form-label" for="pan">Permanent Account Number</label>
                    <input class="form-control" id="pan" type="text" name="pan">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="gst">GST Identification Number</label>
                    <input class="form-control" id="gst" type="text" name="gst">
                </div>
                <button class="btn btn-success" type="submit">Submit</button>
            </form>
        </div>
    </div>