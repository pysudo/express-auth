<% layout('layouts/base') -%>

    <div id="invoiceForm">
        <div class="container">
            <div class="row">
                <div class="col my-5">
                    <h1 class="text-start">COMPANY LOGO</h1>
                </div>
            </div>
        </div>
        <div class="container borderall p-0">
            <div class="container">
                <div class="row">
                    <div class="col border-down">
                        <p class="fs-5 text-uppercase text-center pt-4 mb-0">invoice</p>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row d-flex justify-content-center">
                    <div class="col-4 border-left">
                        <b>Consignee,</b> <br>
                        <%= billings.client.address %> <br>
                            M: <%= billings.client.contact %>
                    </div>
                    <div class="col-4 border-left">
                        Invoice No. : <%= billings.invoice %>
                    </div>
                    <div class="col-3 border-left border-right">
                        Date : <%= billings.billingDate.toLocaleDateString() %>
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col border-up border-down py-4">
                    </div>
                </div>
            </div>
            <div class="container">
                <div class="row p-0">
                    <div class="col-1 border-right border-down">
                        Sl<br>No.
                    </div>
                    <div class="col-4 d-flex align-items-center border-right border-down">
                        Particulars
                    </div>
                    <div class="col-2 d-flex align-items-center border-right border-down">
                        Rate
                    </div>
                    <div class="col-2 d-flex align-items-center border-right border-down">
                        Qty
                    </div>
                    <div class="col-3 d-flex align-items-center border-down">
                        Amount
                    </div>
                </div>
            </div>
            <div class="container">
                <% for(let i=0; i < billings.items.length; i++) { %>
                    <div class="container p-0">
                        <div class="row p-0">
                            <div class="col-1 border-right border-down p-3">
                                <%= i + 1 %>
                            </div>
                            <div class="col-4 border-right border-down p-3">
                                <%= billings.items[i] %>
                            </div>
                            <div class="col-2 border-right border-down p-3">
                                <%= billings.price[i] %>
                            </div>
                            <div class="col-2 border-right border-down p-3">
                                <%= billings.quantity[i] %>
                            </div>
                            <div class="col-3 border-down p-3">
                                <%= billings.grandPrice[i] %>
                            </div>
                        </div>
                    </div>
                    <% } %>
            </div>
            <div class="container">
                <div class="row py-0">
                    <div class="col-9 border-right text-end">
                        <b>Total Amount</b>
                    </div>
                    <div class="col text-end">
                        <b>
                            <%= billings.grandTotal %>
                        </b>
                    </div>
                </div>
            </div>
        </div>
        <div class="container border-left border-right">
            <div class="row">
                <div class="col">
                    <ul>
                        <li class="list-unstyled">
                            <b><u>Terms and payment</u></b>
                        </li>
                        <li>
                            Payment option 1 (DD) : in favour of <b><%= billings.companyProfile.name %></b>
                        </li>
                        <li>
                            Payment option 2 (IMPS/RTGS/NEFT) : <%= billings.companyProfile.bankDetails.bankAddress %>.
                        </li>
                        <li class="list-unstyled">
                            <b>Current A/No . <%= billings.companyProfile.bankDetails.accountNumber %></b>
                        </li>
                        <li class="list-unstyled">
                            <b>IFSC Code: <%= billings.companyProfile.bankDetails.ifsc %>.</b>
                        </li>
                        <li>
                            Please call or email us the transaction details after the money transfer so as to help us
                            track your transfer.
                        </li>
                        <li>
                            Interest @18% p.a will be charged for overdue invoice (Max. 30 Days from Invoice date)
                        </li>
                        <li>
                            Our business is less than 10 lakh per annum. GST registration not applicable
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="container borderall">
            <div class="row">
                <div class="col-8">
                    <div class="row">
                        <div class="col">
                            <b>PAN No. <%= billings.companyProfile.pan %> </b>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <%= billings.companyProfile.name %>
                        </div>
                    </div>
                    <div class="row p-5">
                        <div class="col">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            Authorised Signatory
                        </div>
                    </div>
                </div>
                <div class="col-4 text-center border-left">
                    <div class="col">
                        <div class="row m-3">
                            <div class="col d-flex">
                                Received above material with Good
                                Condition.
                            </div>
                        </div>
                        <div class="row m-4">
                            <div class="col p-2">
                            </div>
                        </div>
                        <div class="row pb-3">
                            <div class="col">
                                Seal and Signature
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="container border-left border-right">
            <div class="row">
                <div class="col">
                    Please feel free to contact on <%= billings.companyProfile.contacts.landline %> or <%= billings.companyProfile.contacts.phone %> (Mon-Fri 10am to 5pm)
                </div>
            </div>
        </div>
        <div class="container borderall">
            <div class="row">
                <div class="col text-center">
                    <b><%= billings.companyProfile.name %></b>
                </div>
            </div>
            <div class="row">
                <div class="col text-center">
                    <%= billings.companyProfile.address %> 
                </div>
            </div>
            <div class="row">
                <div class="col text-center">
                    <%= billings.companyProfile.website ? "Website: " + billings.companyProfile.website + " | " : "" %></b> Email : <%= billings.companyProfile.contacts.email %> 
                </div>
            </div>
        </div>
        <div class="container border-left border-right border-down">
            <div class="row">
                <div class="col text-center">
                    SUBJECT TO BANGALORE JURISDICTION
                </div>
            </div>
        </div>
    </div>