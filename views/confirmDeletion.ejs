<% layout('layouts/base') -%>

    <% if(profileID) { %>
        <form action="/profile/confirm-deletion/<%= profileID %>" method="POST">
            <div class="row d-flex flex-column vh-100 align-content-center justify-content-center">
                <div class="col-6">
                    <div class="mb-3">
                        <label class="form-label" for="reason">Reason:</label>
                        <textarea class="form-control" id="reason" type="text" name="reason" required></textarea>
                    </div>
                    <button class="btn btn-danger" name="choice" type="submit" value="confirm">Confirm Deletion</button>
                    <button class="btn btn-secondary" name="choice" type="submit" value="cancel">Cancel</button>
                </div>
            </div>
        </form>
    <% } else { %>

        <form action="/purchase/confirm-deletion/<%= purchaseID %>" method="POST">
            <div class="row d-flex flex-column vh-100 align-content-center justify-content-center">
                <div class="col-6">
                    <div class="mb-3">
                        <label class="form-label" for="reason">Reason:</label>
                        <textarea class="form-control" id="reason" type="text" name="reason" required></textarea>
                    </div>
                    <button class="btn btn-danger" name="choice" type="submit" value="confirm">Confirm Deletion</button>
                    <button class="btn btn-secondary" name="choice" type="submit" value="cancel">Cancel</button>
                </div>
            </div>
        </form>
    <% } %>