<% layout('layouts/base') -%>

    <div class="row m-5">
        <div class="col-6 offset-3">
            <form action="/profile/edit/<%= profile._id %>?_method=PATCH" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="name">Company Name</label>
                    <input class="form-control" type="text" name="name" value="<%= profile.name %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="address">Company Address</label>
                    <textarea class="form-control" id="address" name="address" cols="30" rows="5"><%= profile.address %></textarea>
                </div>
                <fieldset class="contact input-group mb-3">
                    <legend>Contacts</legend>

                    <label for="landline">
                        <span class="input-group-text">Landline</span>
                    </label>
                    <input class="form-control" id="landline" type="text" name="contacts[landline]" aria-label="Landline" aria-describedby="landine" value="<%= profile.contacts.landline %>">

                    <label for="phone">
                        <span class="input-group-text">Phone</span>
                    </label>
                    <input class="form-control" id="phone" type="text" name="contacts[phone]" aria-label="Phone" aria-describedby="phone" value="<%= profile.contacts.phone %>">
                </fieldset>
                <div class="mb-3">
                    <label class="form-label" for="pan">Permanent Account Number</label>
                    <input class="form-control" id="pan" type="text" name="pan" value="<%= profile.pan %>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="gst">GST Identification Number</label>
                    <input class="form-control" id="gst" type="text" name="gst" value="<%= profile.gst %>">
                </div>
                <button class="btn btn-success" type="submit">Edit Profile</button>
            </form>
        </div>
    </div>