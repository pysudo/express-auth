<% layout('layouts/base') -%>


<div class="row d-flex flex-row vh-100 align-items-center">
    <div class="col-6 offset-3">
        <h1 class="text-center mb-5">Sign in</h1>
        <form action="/login" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Username: </label>
                <input type="text" name="username" id="username" class="form-control" placeholder="Username">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password: </label>
                <input type="text" name="password" id="password" class="form-control" placeholder="Password">
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-primary me-3">Login</button>
                <b>or</b>
                <a class="btn btn-info ms-3" href="/register">Create an account</a>
            </div>
        </form>
    </div>
</div>