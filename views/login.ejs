<% layout('layouts/base') -%>


<div class="row d-flex flex-row vh-100 align-items-center">
    <div class="col-6 offset-3">
        <h1 class="text-center mb-5">Sign in</h1>
        <form class="needs-validation" action="/login" method="POST" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username: </label>
                <input class="form-control" id="username" type="text" name="username" placeholder="Username" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Username cannot be blank.
                </div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password: </label>
                <input  class="form-control" id="password" type="password" name="password" placeholder="Password" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
                <div class="invalid-feedback">
                    Password cannot be blank.
                </div>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary me-3" type="submit">Login</button>
                <b>or</b>
                <a class="btn btn-info ms-3" href="/register">Create an account</a>
            </div>
        </form>
    </div>
</div>