<% layout('layouts/base') -%>

    <form action="/profile" method="POST">
        <div class="row m-3">
            <div class="col-12">

                <nav class="mt-5 my-5" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li><a href="/profile">Company Profile</a></li>
                        <li class="breadcrumbs"><a href="/profile/add">Add Company Profile</a></li>
                    </ol>
                </nav>

                <div class="mb-3">
                    <label class="form-label" for="name">Company Name</label>
                    <input class="form-control" id="name" type="text" name="profile[name]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="address">Company Address</label>
                    <textarea class="form-control" id="address" name="profile[address]" cols="30" rows="5"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="pan">Permanent Account Number</label>
                    <input class="form-control" id="pan" type="text" name="profile[pan]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="gst">GST Identification Number</label>
                    <input class="form-control" id="gst" type="text" name="profile[gst]">
                </div>
                <fieldset class="contact mb-3">
                    <legend class="text-center">Contacts</legend>
                    <div class="mb-3">
                        <label class="form-label" for="landline">
                            Landline
                        </label>
                        <input class="form-control" id="landline" type="number" name="profile[contacts][landline]"
                            aria-label="Landline" aria-describedby="landine">
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="phone">
                            Phone
                        </label>
                        <input class="form-control" id="phone" type="number" name="profile[contacts][phone]" aria-label="Phone"
                            aria-describedby="phone">
                    </div>
                </fieldset>
                <button class="btn btn-success" type="submit">Submit</button>
            </div>
        </div>
    </form>