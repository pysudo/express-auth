<% layout('layouts/base') -%>

    <form action="/purchase" method="POST">

        <div class="row m-5">
            <div class="col-12">

                <nav class="mt-5 my-5" aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li><a href="/purchase">Purchase Details</a></li>
                        <li class="breadcrumbs"><a href="/purchase/add">Add Purchase Detail</a></li>
                    </ol>
                </nav>

                <div class="mb-3">
                    <label class="form-label" for="name">Vendor Name</label>
                    <input class="form-control" type="text" name="purchase[name]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="address">Vendor Address</label>
                    <textarea class="form-control" type="text" name="purchase[address]"></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" id="email" type="email" name="purchase[email]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="contact">Contact</label>
                    <input class="form-control" id="contact" type="number" name="purchase[contact]">
                </div>
                <fieldset class="contact mb-3">
                    <legend class="text-center">Bank Details</legend>

                    <div class="mb-3">
                        <label class="form-label" for="bankName">Bank Name</label>
                        <input class="form-control" id="bankName" type="text" name="purchase[bankDetails][bankName]">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Account Number</label>
                        <input type="number" class="form-control" aria-label="Account Number"
                            name="purchase[bankDetails][accountNumber]">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Type</label>
                        <select class="form-select" id="accountType" name="purchase[bankDetails][accountType]">
                            <option value="savings">Savings</option>
                            <option value="current">Current</option>
                            <option value="others">Others</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="ifsc">IFSC Code</label>
                        <input class="form-control" id="ifsc" type="text" name="purchase[bankDetails][ifsc]">
                    </div>
                </fieldset>
                <div class="mb-3">
                    <div class="form-check form-switch">
                        <input class="form-check-input" id="activeState" type="checkbox" name="purchase[activeStatus]" checked>
                        <label class="form-check-label" for="activeState">Active Status</label>
                    </div>
                </div>

                <button class="btn btn-success" type="submit">Submit</button>
            </div>
        </div>
    </form>