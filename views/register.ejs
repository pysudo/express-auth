<% layout('layouts/base') -%>


<div class="row d-flex flex-row vh-100 align-items-center">
    <div class="col-6 offset-3">
        <h1 class="text-center mb-5">Create a new account</h1>
        <form class="needs-validation" action="/register" method="POST" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username: </label>
                <input id="username" class="form-control" type="text" name="userDetails[username]" placeholder="Username" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password: </label>
                <input id="password" class="form-control" type="password" name="userDetails[password]" placeholder="Password" required>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary me-3" type="submit">Register</button>
                <b>or</b>
                <a class="btn btn-info ms-3" href="/login">Log in</a>
            </div>
        </form>
    </div>
</div>